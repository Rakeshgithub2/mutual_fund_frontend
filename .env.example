# =====================================================
# FRONTEND ENVIRONMENT VARIABLES
# =====================================================
# Copy this to .env.local and update with your values
# Note: Only NEXT_PUBLIC_* variables are exposed to browser

# =====================================================
# BACKEND API CONFIGURATION
# =====================================================
# ⚠️ IMPORTANT: NO trailing slash, NO /api suffix
# Backend runs on port 3002 by default

# Development (local backend)
NEXT_PUBLIC_API_URL=http://localhost:3002

# Production (update with your deployed backend URL)
# NEXT_PUBLIC_API_URL=https://your-backend.vercel.app

# Frontend URL (for OAuth redirects)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:5001

# =====================================================
# GOOGLE OAUTH
# =====================================================
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here

# =====================================================
# GOOGLE ANALYTICS (OPTIONAL)
# =====================================================
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id

# =====================================================
# GEMINI AI (OPTIONAL)
# =====================================================
# Get from: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_KEY=your-gemini-api-key-here

# =====================================================
# FEATURE FLAGS (OPTIONAL)
# =====================================================
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=50
NEXT_PUBLIC_MAX_PAGE_SIZE=500
NEXT_PUBLIC_ENABLE_FUND_MANAGERS=true
NEXT_PUBLIC_ENABLE_GLOBAL_INDICES=true